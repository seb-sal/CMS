<div class="jumbotron">

<h1 id="login">Login</h1>

<p id="alert"><%= alert %></p>
<%= form_tag sessions_path do %>
  <div class="username">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="password">
    <%= label_tag :Pass %>
    <%= password_field_tag :password %>
  </div>
  <div class="action-btn"><%= submit_tag "Log in" %></div>
<% end %>
</div>


