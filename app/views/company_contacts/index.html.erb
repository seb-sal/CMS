<h1>Index Page</h1>

<h2><%= link_to 'New client', new_company_contact_path %></h2>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Picture</th>
      <th>Name</th>
      <th>Job Title</th>
      <th>Email Type</th>
      <th>Office Num</th>
      <th>Cellphone</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_contacts.each do |company_contact| %>
      <tr>
        <td><%= company_contact.company_contact_id %></td>
        <td><%= company_contact.profile_pic_uri %></td>
        <td><%= company_contact.name %></td>
        <td><%= company_contact.job_title %></td>
        <td><%= company_contact.email %></td>
        <td><%= company_contact.office_number %></td>
        <td><%= company_contact.cellphone_number %></td>

        <td><%= link_to 'Edit', edit_company_contact_path(company_contact) %></td>
        <td>
          <%= button_to "Delete", { action: "destroy", :controller => :company_contacts, id: company_contact.id },
          method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
